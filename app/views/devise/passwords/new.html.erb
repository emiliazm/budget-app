<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { "data-turbo": "false", method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Email', required: true %>
  </div>

  <div class="reset-div">
    <%= f.submit "Send me reset password instructions", class: 'reset-btn'%>
  </div>
<% end %>

<%= render "devise/shared/links" %>
